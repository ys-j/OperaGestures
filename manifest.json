{
	"manifest_version": 2,
	"name": "Opera Gestures",
	"version": "0.1",
	"description": "__MSG_manifest_description__",
	"author": "_y_s",
	"default_locale": "en",
	"permissions": ["storage"],
	"icons": {
		"48": "icon.svg",
		"96": "icon.svg"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"options_ui": {
		"page": "options.html",
		"browser_style": true
	}
}